{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#000000",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#ffffff",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#9DFF20",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#ff0000",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#fff000",
          "name": "Tertiary",
          "slug": "tertiary"
        }
      ]
    }
  },
  "styles": {
    "elements": {
      "button": {
        "border": {
          "style": "solid",
          "width": "4px",
          "color": "var(--wp--preset--color--base)"
        },
        "color": {
          "background": "var(--wp--preset--color--contrast)",
          "text": "var(--wp--preset--color--base)"
        },
        "typography": {
          "fontWeight": "700",
          "textTransform": "uppercase"
        },
        "spacing": {
          "padding": {
            "top": ".667em",
            "right": "1.333em",
            "bottom": ".667em",
            "left": "1.333em"
          }
        },
        ":active": {
          "typography": {
            "textDecoration": "underline dashed"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "underline dashed"
          }
        },
        ":hover": {
          "border": {
            "color": "var(--wp--preset--color--contrast)",
            "style": "solid",
            "width": "4px"
          },
          "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
          }
        },
        ":visited": {
          "color": {
            "text": "var(--wp--preset--color--base)"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "2rem"
    }
  }
}
